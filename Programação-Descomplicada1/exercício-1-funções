#include <stdio.h>

int verificarNumero(int numero) {
    if (numero > 0) {
        return 1;  
    } else if (numero < 0) {
        return -1; 
    } else {
        return 0;   
    }
}

int main() {
    int num;
    printf("Digite um número: ");
    scanf("%d", &num);

    int resultado = verificarNumero(num);

    printf("O número é ");
    if (resultado == 1) {
        printf("positivo.\n");
    } else if (resultado == -1) {
        printf("negativo.\n");
    } else {
        printf("igual a zero.\n");
    }

    return 0;
}

